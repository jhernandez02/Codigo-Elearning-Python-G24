generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String
  productos Producto[]
}

model Producto {
  id           Int       @id @default(autoincrement())
  categoria    Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId  Int
  codigo       String
  nombre       String
  precio       String
  cantidad     Int
  fecha_compra DateTime
}
